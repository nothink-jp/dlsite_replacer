{
	"applications": {
		"gecko": {
			"id": "jack@supremeoverlordjabs.co",
			"strict_min_version": "42.0"
		}
	},
	"manifest_version": 2,
	"name": "DLSITE_Replacer",
	"version": "1.0",
	"description": "replace strings in dlsite",
	"permissions": ["activeTab", "storage"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png",
			"48": "icons/icon48.png",
			"96": "icons/icon96.png"
		},
		"default_title": "DLSITE_Replacer"
	},
	"content_scripts": [
		{
			"matches": ["*://*.dlsite.com/*"],
			"js": ["content.js"]
		}
	]
}
